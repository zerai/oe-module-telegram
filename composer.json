{
    "name": "zerai/oe-module-telegram",
    "license": "MIT",
    "description": "OpenEMR Telegram notification module",
    "type": "openemr-module",
    "authors": [
        {
            "name": "Teclai Zerai",
            "email": "teclaizerai@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2.5",
        "openemr/oe-module-installer-plugin": "^0.1.3",
        "symfony/notifier": "^5.0",
        "symfony/telegram-notifier": "^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "~8.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OpenEMR\\Modules\\TelegramNotifier\\": "src/",
            "Zerai\\ModulesIsolation\\": "lib/modules-isolation/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEMR\\Modules\\TelegramNotifier\\Tests\\": "tests/",
            "Zerai\\ModulesIsolation\\": "lib/modules-isolation/tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
